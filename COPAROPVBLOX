----------------------------------------------------------------
-- BALL PREDICTION
----------------------------------------------------------------
local BallPredictionEnabled = false
local BallPredColor = Color3.fromRGB(255,255,255)
local BallPredSize = 0.1
local BallPredAccuracy = 5
local BallPredRefresh = 0.1
local BallPredThreshold = 25
local BallPredDump = {}

local function quadraticSolver(a,b,c)
	local delta = b*b - 4*a*c
	if delta < 0 then return 0 end
	local x1 = (-b + math.sqrt(delta)) / (2*a)
	local x2 = (-b - math.sqrt(delta)) / (2*a)
	return (x2 > x1 and x2 or x1)
end

local function findLandingPosition(vel,pos,acc)
	local t = quadraticSolver(0.5*-acc, vel.Y, pos.Y)
	return pos + Vector3.new(vel.X*t, 0, vel.Z*t)
end

BallTab:CreateToggle({Name = "ATIVAR PREDIÇÃO", CurrentValue = false, Callback = function(v) BallPredictionEnabled = v end})

task.spawn(function()
	while true do
		task.wait(BallPredRefresh)
		for _,i in pairs(BallPredDump) do if i then i:Destroy() end end
		table.clear(BallPredDump)

		if BallPredictionEnabled then
			pcall(function()
				local ball = workspace.Debris.Balls:FindFirstChildOfClass("Part")
				if ball and ball.AssemblyLinearVelocity.Magnitude > BallPredThreshold then
					local land = findLandingPosition(ball.AssemblyLinearVelocity, ball.Position, workspace.Gravity)
					local a0 = Instance.new("Attachment", workspace.Terrain)
					a0.WorldPosition = ball.Position
					local a1 = Instance.new("Attachment", workspace.Terrain)
					a1.WorldPosition = land
					local beam = Instance.new("Beam", ball)
					beam.Attachment0 = a0 beam.Attachment1 = a1
					beam.Width0 = BallPredSize beam.Width1 = BallPredSize
					beam.Color = ColorSequence.new(BallPredColor)
					table.insert(BallPredDump, a0) table.insert(BallPredDump, a1) table.insert(BallPredDump, beam)
				end
			end)
		end
	end
end)

----------------------------------------------------------------
-- AIMBOT (ALVO VISUAL)
----------------------------------------------------------------
local AimPart = nil
local AimbotEnabled = false

local function ToggleAimPart(state)
    if state then
        if not AimPart then
            AimPart = Instance.new("Part", workspace)
            AimPart.Name = "SAML_TARGET"
            AimPart.Size = Vector3.new(3, 3, 3)
            AimPart.Shape = Enum.PartType.Ball
            AimPart.Transparency = 0.5
            AimPart.Color = Color3.fromRGB(255, 0, 0)
            AimPart.Material = Enum.Material.Neon
            AimPart.CanCollide = false
            AimPart.Anchored = true
            local hrp = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
            if hrp then AimPart.CFrame = hrp.CFrame * CFrame.new(0, 0, -60) end
        end
    else
        if AimPart then AimPart:Destroy() AimPart = nil end
    end
end

AimbotTab:CreateToggle({
	Name = "KICK AIMBOT (VISUAL TARGET)",
	CurrentValue = false,
	Callback = function(Value)
		AimbotEnabled = Value
        ToggleAimPart(Value)
	end,
})

AimbotTab:CreateButton({
    Name = "REPOSICIONAR ALVO NA FRENTE",
    Callback = function()
        if AimPart and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
            AimPart.CFrame = LocalPlayer.Character.HumanoidRootPart.CFrame * CFrame.new(0, 0, -60)
        end
    end,
})

Rayfield:Notify({Title = "SAML HUB", Content = "Script carregado com bypass de AntiExploit!", Duration = 5})

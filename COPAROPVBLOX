local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

----------------------------------------------------------------
-- [SISTEMA] BYPASS ANTI-EXPLOIT (LOOP CONSTANTE)
----------------------------------------------------------------
task.spawn(function()
    while task.wait(0.1) do 
        pcall(function()
            local config = workspace:FindFirstChild("Configuration")
            if config and config:FindFirstChild("AntiExploit") then
                if config.AntiExploit.Value ~= false then
                    config.AntiExploit.Value = false
                end
            end
        end)
    end
end)

